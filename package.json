{
  "name": "node-typescript-boilerplate",
  "version": "1.0.0",
  "description": "A simple boilerplate for using node and typescript together.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "tsc": "tsc",
    "dev": "ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "prod": "rimraf ./build && tsc && node ./build/index.js",
    "clean": "rimraf ./build",
    "lint": "eslint src/**/*.ts"
  },
  "author": "Hemen Estefaie",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/helmet": "^0.0.44",
    "@types/jest": "^24.0.18",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.4",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-config-react": "^1.1.7",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.42",
    "typescript": "^3.6.2",
    "typescript-eslint-parser": "^22.0.0"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.21.1",
    "morgan": "^1.9.1"
  }
}
